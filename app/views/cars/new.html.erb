<%= render "flash" %>
<div class="form">
<%= form_for @car do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :color %>
  <%= f.text_field :color %>
  <%= f.label :year %>
  <%= f.text_field :year %>
  <%= f.label :mileage %>
  <%= f.text_field :mileage %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :Manufacturer %>
  <%= f.collection_select(:manufacturer_id, Manufacturer.all, :id, :name) %>
  <%= f.submit "Create Car" %>
<% end %>
</div>
