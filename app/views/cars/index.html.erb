<h1> Cars </h1>
<%= render "flash" %>

<div id="cars-list">
  <% @cars.each do |car| %>
    <li><%=car.name%>
      <%=car.manufacturer.name%>
      <%=car.color%>
      <%=car.year%>
      <%=car.mileage%>
      <% if !car.description.nil? %>
        <%=car.description%></li>
      <%end%>
  <% end %>
</div>


<div id="search">
  <%= form_tag("/search", remote: true) do %>
    <%= label_tag(:search, "Search for:") %>
    <%= text_field_tag(:search) %>
    <%= submit_tag("Search") %>
  <% end %>
</div>

<%= link_to "Advanced Search", new_search_path %>
