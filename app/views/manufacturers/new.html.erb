<% if @errors %>
  <% @manufacturer.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="form">
<%= form_for @manufacturer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.submit "Create Manufacturer" %>
<% end %>
</div>
